- section_name = efps.section.name.titleize.singularize

h4 Add a #{ section_name } suggestion

= simple_form_for(efps, html: { data: { 'abide': '', 'live-validate': true } }) do |f|
  .alert.callout data-abide-error='' style='display: none;'
    p
      i.fi-alert
      '  Please correct the errors below.

  = f.simple_fields_for(:type1s, efps.type1s.build) do |sf_t1|

    .form-inputs class="new-type1-fields-#{ efps.id.to_s }"
      = sf_t1.input :name, required: true, hint: 'Name can\'t be blank', autofocus: true
      = sf_t1.input :description, input_html: { rows: 4 }

    .links
      = link_to_add_association "Add #{ section_name } fields",
        f, :type1s, partial: 'extraction_forms_projects/build/type1/type1_fields', render_options: { locals: { efps: efps } }

  .form-actions
    = f.button :submit, 'Save'
